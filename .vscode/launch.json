    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "src",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/index.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "1 prompt changes",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/packages/analyze-prompt-changes/dist/index.js",
            "outFiles": [
                "${workspaceFolder}/packages/analyze-prompt-changes/dist/**/*.js"
            ],
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "start"]
        }

    ]
}